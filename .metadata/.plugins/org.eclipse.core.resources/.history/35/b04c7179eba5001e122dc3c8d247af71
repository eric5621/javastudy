package 단순if문;

import java.util.Scanner;

public class Ex01단순if문 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		//출력문
		
		System.out.println("나이를 입력하세요 >> ");
		
		int age = sc.nextInt();
		
		if (age>=20) {
			System.out.println("성인입니다.");
		}
		
		
		
		
		
		
		
		
	}

}
